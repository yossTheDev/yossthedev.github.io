---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Proyectos</div>
  </div>

  <div class="p-2">
    <HorizontalCard
      title="Karbonized"
      img="/karbonized.png"
      desc="Crea diseños úicos con bloques personalizables de codigo, imágenes, QR, mockups y más"
      url="https://karbonized.onrender.com"
      badge="FOSS"
    />

    <div class="mx-auto my-2 h-1 w-1 rounded-full bg-gray-600/20 p-1"></div>

    <HorizontalCard
      title="Prossa"
      img="/prossa.png"
      desc="LLeva tu bliblioteca contigo a cualquier lugar con Prossa, el lector de libros electrónicos web gratuito y de código abierto. Con estadísticas de lectura y una interfaz fácil de usar"
      url="https://yossthedev.github.io/prossa"
      badge="FOSS"
    />
  </div>
</BaseLayout>
