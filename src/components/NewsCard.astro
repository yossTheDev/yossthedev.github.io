---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="rounded-2xl p-0.5 transition ease-in-out hover:ring-2 hover:ring-purple-400 active:bg-base-300/40 portrait:hover:scale-95"
>
  <a href={url} target={target}>
    <div class="hero-content flex flex-col">
      {
        img && (
          <Image
            src={img}
            height={150}
            width={250}
            format="webp"
            alt={title}
            class="flex w-full max-w-full rounded-xl md:max-w-[13rem]"
          />
        )
      }
      <div class="w-full grow">
        <h2 class="text font-bold">
          {title}
          {
            badge && (
              <div class="gradient badge badge-primary mx-2 border-none">
                {badge}
              </div>
            )
          }
        </h2>
        <p class="line-clamp-3 py-1 text-sm">{desc}</p>
        <div class="card-actions justify-start">
          {
            tags &&
              tags
                .split(" ")
                .map((tag) => (
                  <div class="badge badge-outline border-primary text-primary">
                    {tag}
                  </div>
                ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
